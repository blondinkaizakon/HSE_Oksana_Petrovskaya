class Claim:
    def __init__(self, plaintiff, defendant, subject, amount, court_name, date_filed=None):
        """
        –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏—Å–∫–∞.
        :param plaintiff: –ò—Å—Ç–µ—Ü (–§–ò–û –∏–ª–∏ –Ω–∞–∑–≤–∞–Ω–∏–µ –æ—Ä–≥–∞–Ω–∏–∑–∞—Ü–∏–∏)
        :param defendant: –û—Ç–≤–µ—Ç—á–∏–∫ (–§–ò–û –∏–ª–∏ –Ω–∞–∑–≤–∞–Ω–∏–µ –æ—Ä–≥–∞–Ω–∏–∑–∞—Ü–∏–∏)
        :param subject: –ü—Ä–µ–¥–º–µ—Ç –∏—Å–∫–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä, "–≤–∑—ã—Å–∫–∞–Ω–∏–µ –¥–æ–ª–≥–∞", "–≤–æ–∑–º–µ—â–µ–Ω–∏–µ —É—â–µ—Ä–±–∞")
        :param amount: –°—É–º–º–∞ –∏—Å–∫–∞ (–≤ —Ä—É–±–ª—è—Ö, –º–æ–∂–µ—Ç –±—ã—Ç—å 0, –µ—Å–ª–∏ –Ω–µ–∏–º—É—â–µ—Å—Ç–≤–µ–Ω–Ω—ã–π)
        :param court_name: –ù–∞–∑–≤–∞–Ω–∏–µ —Å—É–¥–∞, –∫—É–¥–∞ –ø–æ–¥–∞—ë—Ç—Å—è –∏—Å–∫
        :param date_filed: –î–∞—Ç–∞ –ø–æ–¥–∞—á–∏ (–µ—Å–ª–∏ –Ω–µ —É–∫–∞–∑–∞–Ω–∞ ‚Äî –±—É–¥–µ—Ç —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞ –ø—Ä–∏ –ø–æ–¥–∞—á–µ)
        """
        self.plaintiff = plaintiff
        self.defendant = defendant
        self.subject = subject
        self.amount = amount
        self.court_name = court_name
        self.date_filed = date_filed
        self.status = "–ß–µ—Ä–Ω–æ–≤–∏–∫"  # –°—Ç–∞—Ç—É—Å: –ß–µ—Ä–Ω–æ–≤–∏–∫, –ü–æ–¥–∞–Ω, –ü—Ä–∏–Ω—è—Ç, –û—Ç–∫–ª–æ–Ω—ë–Ω, –†–∞—Å—Å–º–æ—Ç—Ä–µ–Ω
        self.case_number = None   # –ù–æ–º–µ—Ä –¥–µ–ª–∞ (–Ω–∞–∑–Ω–∞—á–∞–µ—Ç—Å—è —Å—É–¥–æ–º –ø–æ—Å–ª–µ –ø—Ä–∏–Ω—è—Ç–∏—è)

    def submit(self, date_filed):
        """
        –ü–æ–¥–∞—Ç—å –∏—Å–∫ –≤ —Å—É–¥.
        """
        if self.status == "–ß–µ—Ä–Ω–æ–≤–∏–∫":
            self.date_filed = date_filed
            self.status = "–ü–æ–¥–∞–Ω"
            print(f"–ò—Å–∫ –ø–æ–¥–∞–Ω –≤ {self.court_name} {self.date_filed}.")
        else:
            print("–ò—Å–∫ —É–∂–µ –ø–æ–¥–∞–Ω –∏–ª–∏ –≤ –¥—Ä—É–≥–æ–º —Å—Ç–∞—Ç—É—Å–µ.")

    def accept(self, case_number):
        """
        –°—É–¥ –ø—Ä–∏–Ω—è–ª –∏—Å–∫ –∫ –ø—Ä–æ–∏–∑–≤–æ–¥—Å—Ç–≤—É.
        """
        if self.status == "–ü–æ–¥–∞–Ω":
            self.case_number = case_number
            self.status = "–ü—Ä–∏–Ω—è—Ç"
            print(f"–ò—Å–∫ –ø—Ä–∏–Ω—è—Ç –∫ –ø—Ä–æ–∏–∑–≤–æ–¥—Å—Ç–≤—É. –ù–æ–º–µ—Ä –¥–µ–ª–∞: {self.case_number}.")
        else:
            print("–ò—Å–∫ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –ø—Ä–∏–Ω—è—Ç ‚Äî –ø—Ä–æ–≤–µ—Ä—å—Ç–µ —Å—Ç–∞—Ç—É—Å.")

    def reject(self, reason):
        """
        –°—É–¥ –æ—Ç–∫–ª–æ–Ω–∏–ª –∏—Å–∫.
        """
        if self.status in ["–ü–æ–¥–∞–Ω", "–ß–µ—Ä–Ω–æ–≤–∏–∫"]:
            self.status = "–û—Ç–∫–ª–æ–Ω—ë–Ω"
            print(f"–ò—Å–∫ –æ—Ç–∫–ª–æ–Ω—ë–Ω –ø–æ –ø—Ä–∏—á–∏–Ω–µ: {reason}")
        else:
            print("–ò—Å–∫ —É–∂–µ –≤ —Å—Ç–∞—Ç—É—Å–µ, –Ω–µ –ø–æ–¥–ª–µ–∂–∞—â–µ–º –æ—Ç–∫–ª–æ–Ω–µ–Ω–∏—é.")

    def resolve(self, decision):
        """
        –ó–∞–≤–µ—Ä—à–∏—Ç—å —Ä–∞—Å—Å–º–æ—Ç—Ä–µ–Ω–∏–µ –∏—Å–∫–∞ (–≤—ã–Ω–µ—Å—Ç–∏ —Ä–µ—à–µ–Ω–∏–µ).
        """
        if self.status == "–ü—Ä–∏–Ω—è—Ç":
            self.status = "–†–∞—Å—Å–º–æ—Ç—Ä–µ–Ω"
            print(f"–ü–æ –¥–µ–ª—É ‚Ññ{self.case_number} –≤—ã–Ω–µ—Å–µ–Ω–æ —Ä–µ—à–µ–Ω–∏–µ: {decision}")
        else:
            print("–ù–µ–ª—å–∑—è –≤—ã–Ω–µ—Å—Ç–∏ —Ä–µ—à–µ–Ω–∏–µ ‚Äî –∏—Å–∫ –Ω–µ –ø—Ä–∏–Ω—è—Ç –∫ –ø—Ä–æ–∏–∑–≤–æ–¥—Å—Ç–≤—É.")

    def get_info(self):
        """
        –í—ã–≤–µ—Å—Ç–∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –ø–æ –∏—Å–∫—É.
        """
        print(f"""
üìú –ò–°–ö–û–í–û–ï –ó–ê–Ø–í–õ–ï–ù–ò–ï
–ò—Å—Ç–µ—Ü: {self.plaintiff}
–û—Ç–≤–µ—Ç—á–∏–∫: {self.defendant}
–ü—Ä–µ–¥–º–µ—Ç: {self.subject}
–°—É–º–º–∞: {self.amount} —Ä—É–±.
–°—É–¥: {self.court_name}
–î–∞—Ç–∞ –ø–æ–¥–∞—á–∏: {self.date_filed or '–Ω–µ –ø–æ–¥–∞–Ω–æ'}
–°—Ç–∞—Ç—É—Å: {self.status}
–ù–æ–º–µ—Ä –¥–µ–ª–∞: {self.case_number or '–Ω–µ –ø—Ä–∏—Å–≤–æ–µ–Ω'}
        """)
# –°–æ–∑–¥–∞—ë–º –∏—Å–∫
my_claim = Claim(
    plaintiff="–ü–µ—Ç—Ä–æ–≤—Å–∫–∞—è –û.–Æ.",
    defendant="–û–û–û '–†–æ–≥–∞ –∏ –ö–æ–ø—ã—Ç–∞'",
    subject="–í–∑—ã—Å–∫–∞–Ω–∏–µ –∑–∞–¥–æ–ª–∂–µ–Ω–Ω–æ—Å—Ç–∏ –ø–æ –¥–æ–≥–æ–≤–æ—Ä—É ‚Ññ123",
    amount=196350000,
    court_name="–ê—Ä–±–∏—Ç—Ä–∞–∂–Ω—ã–π —Å—É–¥ –≥. –ú–æ—Å–∫–≤—ã"
)

# –í—ã–≤–æ–¥–∏–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é
my_claim.get_info()

# –ü–æ–¥–∞—ë–º –∏—Å–∫
my_claim.submit("2025-04-02")

# –°—É–¥ –ø—Ä–∏–Ω–∏–º–∞–µ—Ç –∏—Å–∫
my_claim.accept("–ê40-4039/2025")

# –í—ã–Ω–æ—Å–∏–º —Ä–µ—à–µ–Ω–∏–µ
my_claim.resolve("–ò—Å–∫ —É–¥–æ–≤–ª–µ—Ç–≤–æ—Ä–∏—Ç—å –≤ –ø–æ–ª–Ω–æ–º –æ–±—ä—ë–º–µ.")

# –§–∏–Ω–∞–ª—å–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è
my_claim.get_info()
