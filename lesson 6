import random
import time

# ==========================
# 1. –°–æ–∑–¥–∞—ë–º –º–∞—Å—Å–∏–≤ –∏–∑ 100 000 —Å–ª—É—á–∞–π–Ω—ã—Ö —á–∏—Å–µ–ª
# ==========================
print("üîπ –®–∞–≥ 1: —Å–æ–∑–¥–∞—ë–º –º–∞—Å—Å–∏–≤ –∏–∑ 100 000 —Å–ª—É—á–∞–π–Ω—ã—Ö —á–∏—Å–µ–ª...")
array_1 = []
for i in range(100_000):
    array_1.append(random.randint(1, 1_000_000))

print(f"‚úÖ –ì–æ—Ç–æ–≤–æ. –ü–µ—Ä–≤—ã–µ 5 —á–∏—Å–µ–ª: {array_1[:5]}")

# ==========================
# 2. –°–æ–∑–¥–∞—ë–º –º–∞—Å—Å–∏–≤ –∏–∑ 100 000 —Å–ª–æ–≤–∞—Ä–µ–π: {"num_1": ..., "num_2": ...}
# ==========================
print("\nüîπ –®–∞–≥ 2: —Å–æ–∑–¥–∞—ë–º –º–∞—Å—Å–∏–≤ –∏–∑ 100 000 —Å–ª–æ–≤–∞—Ä–µ–π...")
array_2 = []
for i in range(100_000):
    array_2.append({
        "num_1": random.randint(1, 1_000_000),
        "num_2": random.randint(1, 1_000_000)
    })

print(f"‚úÖ –ì–æ—Ç–æ–≤–æ. –ü–µ—Ä–≤—ã–µ 2 —Å–ª–æ–≤–∞—Ä—è: {array_2[:2]}")

# ==========================
# 3. –ü–∏—à–µ–º —Ñ—É–Ω–∫—Ü–∏—é —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏ –ø—É–∑—ã—Ä—å–∫–æ–º –∏ —Å–æ—Ä—Ç–∏—Ä—É–µ–º –ø–µ—Ä–≤—ã–π –º–∞—Å—Å–∏–≤
# ==========================
def bubble_sort(arr):
    """
    –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ –ø—É–∑—ã—Ä—å–∫–æ–º ‚Äî –º–µ–¥–ª–µ–Ω–Ω–æ, –Ω–æ –ø—Ä–æ—Å—Ç–æ.
    –ú–µ–Ω—è–µ—Ç –∏—Å—Ö–æ–¥–Ω—ã–π —Å–ø–∏—Å–æ–∫.
    """
    n = len(arr)
    for i in range(n):
        for j in range(0, n - i - 1):
            if arr[j] > arr[j + 1]:
                # –ú–µ–Ω—è–µ–º –º–µ—Å—Ç–∞–º–∏
                arr[j], arr[j + 1] = arr[j + 1], arr[j]

# –ö–æ–ø–∏—Ä—É–µ–º –ø–µ—Ä–≤—ã–π –º–∞—Å—Å–∏–≤, —á—Ç–æ–±—ã –Ω–µ –∏—Å–ø–æ—Ä—Ç–∏—Ç—å –æ—Ä–∏–≥–∏–Ω–∞–ª
array_1_for_sorting = array_1.copy()

print("\nüîπ –®–∞–≥ 3: —Å–æ—Ä—Ç–∏—Ä—É–µ–º –ø–µ—Ä–≤—ã–π –º–∞—Å—Å–∏–≤ –ø—É–∑—ã—Ä—å–∫–æ–º...")
print("‚è≥ –≠—Ç–æ –∑–∞–π–º—ë—Ç –Ω–µ—Å–∫–æ–ª—å–∫–æ –º–∏–Ω—É—Ç ‚Äî –ø–æ–¥–æ–∂–¥–∏...")

start_time = time.time()
bubble_sort(array_1_for_sorting)
end_time = time.time()

print(f"‚úÖ –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞ –∑–∞ {end_time - start_time:.2f} —Å–µ–∫—É–Ω–¥")
print(f"–ü–µ—Ä–≤—ã–µ 10 –æ—Ç—Å–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω–Ω—ã—Ö —á–∏—Å–µ–ª: {array_1_for_sorting[:10]}")

# ==========================
# 4. –°–æ—Ä—Ç–∏—Ä—É–µ–º –≤—Ç–æ—Ä–æ–π –º–∞—Å—Å–∏–≤ —Å –ø–æ–º–æ—â—å—é .sort() –∏ –ª—è–º–±–¥–∞-—Ñ—É–Ω–∫—Ü–∏–∏
# ==========================
print("\nüîπ –®–∞–≥ 4: —Å–æ—Ä—Ç–∏—Ä—É–µ–º –≤—Ç–æ—Ä–æ–π –º–∞—Å—Å–∏–≤ –ø–æ num_1, –ø–æ—Ç–æ–º –ø–æ num_2...")

# –ö–æ–ø–∏—Ä—É–µ–º, —á—Ç–æ–±—ã –Ω–µ –º–µ–Ω—è—Ç—å –æ—Ä–∏–≥–∏–Ω–∞–ª
array_2_for_sorting = array_2.copy()

start_time = time.time()
# –°–æ—Ä—Ç–∏—Ä—É–µ–º: —Å–Ω–∞—á–∞–ª–∞ –ø–æ num_1, –ø–æ—Ç–æ–º –ø–æ num_2
array_2_for_sorting.sort(key=lambda x: (x["num_1"], x["num_2"]))
end_time = time.time()

print(f"‚úÖ –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞ –∑–∞ {end_time - start_time:.4f} —Å–µ–∫—É–Ω–¥")
print(f"–ü–µ—Ä–≤—ã–µ 3 –æ—Ç—Å–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω–Ω—ã—Ö —Å–ª–æ–≤–∞—Ä—è: {array_2_for_sorting[:3]}")
